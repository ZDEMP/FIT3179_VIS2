{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "2016 US Election results by State",
  "width": 2200,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/ZDEMP/FIT3179_VIS2/main/us-states.json",
    "format": {"type": "topojson", "feature": "us-states"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ZDEMP/FIT3179_VIS2/main/Vis2_Data.csv"
        },
        "key": "States2016",
        "fields": ["MappingData", "WinningParty", "TotalVotes2016"]
      }
    },
    {"calculate": "datum.MappingData", "as": "Proportion of Total Votes"}
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Proportion of Total Votes",
      "type": "quantitative",
      "scale": {"domain": [0.7, 0.3], "scheme": "redblue"}
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {
        "field": "TotalVotes2016",
        "type": "quantitative",
        "title": "Proportion of Total Votes"
      },
      {"field": "WinningParty", "type": "nominal"}
    ]
  },
  "config": {}
}