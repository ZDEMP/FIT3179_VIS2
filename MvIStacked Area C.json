{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Trend of  Main Party voters vs Independent Party voters",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/ZDEMP/FIT3179_VIS2/main/Yearly%20Data.csv"
  },
  "params": [
    {
      "name": "Type_selection",
      "bind": {
        "input": "select",
        "options": [null, "Main", "Independent"],
        "labels": ["Show All", "Main", "Independent"],
        "name": "Type Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "Type_selection == null || datum['MvI'] == Type_selection"},
    {
      "calculate": "datum['Ind_Votes']/datum['Total Votes']",
      "as": "Proportion of Independent Votes"
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "timeUnit": "year",
      "field": "Year",
      "axis": {"format": "%Y"},
      "title": "Year"
    },
    "y": {"aggregate": "sum", "field": "Votes_MvI", "title": "Total Votes"},
    "color": {
      "field": "MvI",
      "scale": {
        "domain": ["Main", "Independent"],
        "range": ["#996ee8", "#8a8a8a"]
      },
      "title": "Type of Party"
    },
    "tooltip": [
      {"timeUnit": "year", "field": "Year", "type": "nominal"},
      {"field": "Winning_Party", "type": "nominal", "title": "Winning Party"},
      {
        "field": "Proportion of Independent Votes",
        "type": "quantitative",
        "format": "%"
      },
      {
        "field": "Main_Votes",
        "type": "quantitative",
        "format": ",",
        "title": "Votes for a Main Party"
      },
      {
        "field": "Ind_Votes",
        "type": "quantitative",
        "format": ",",
        "title": "Independent Votes"
      }
    ]
  },
  "config": {}
}
      {
        "field": "Ind_Votes",
        "type": "quantitative",
        "format": ",",
        "title": "Independent Votes"
      }
    ]
  },
  "config": {}
}